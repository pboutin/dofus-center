<div class="container">
    <h1>
        {{t 'prepare.manage'}} <em>{{model.name}}</em>

        {{#link-to 'crafting' model.id class="btn btn-sm btn-primary"}}
            {{t 'prepare.go_to_workbench'}}
        {{/link-to}}

        {{#link-to 'projects' class="btn btn-sm btn-info"}}
            {{t 'prepare.back_to_projects'}}
        {{/link-to}}
    </h1>
</div>

{{item-list items=model.items onRemove=(action 'remove')}}

<div class="container">
    <div class="form-group margin-top">
        {{input value=query placeholder=(t 'prepare.search') class="form-control"}}
    </div>

    <div class="list-group icons-list-group">
        {{#each filteredItems as |item|}}
            <button class="list-group-item" {{action 'add' item}}>
                <span class="badge">
                    lvl {{item.level}}
                </span>
                <span class="badge">
                    {{item.type}}
                </span>

                <img src={{item.image}}>
                {{item.name}}
            </button>
        {{/each}}
    </div>
</div>

