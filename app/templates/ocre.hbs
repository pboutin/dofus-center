<div class="container">
    <button class="btn btn-primary" {{action 'updateTarget' 1}} disabled={{cantIncrement}}>
        {{t 'ocre.add_target'}}
    </button>
    <button class="btn btn-primary" {{action 'updateTarget' -1}} disabled={{cantDecrementTarget}}>
        {{t 'ocre.remove_target'}}
    </button>
    <button class="btn btn-primary" {{action 'toggleFilter'}}>
        {{fa-icon 'list'}} {{t (if isFiltered 'ocre.show_everything' 'ocre.hide_completed')}}
    </button>
    {{search-input value=textFilter class="margin-top"}}
</div>

{{css-filter selector="._ocre-step, ._ocre-item" textFilter=textFilter}}

